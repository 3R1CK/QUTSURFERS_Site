
@{
    ViewBag.Title = "Membership Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/PaymentPage.css">

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-4">
        <hr />
        <h3><strong>QUT Surfers Membership Payment</strong></h3>
        <hr />
    </div>
    <div class="col-md-4"></div>
    <div class="col-md-2"></div>
</div>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-4">
        <div class="panel panel-default text-center">
            <div class="panel-heading">
                <h3>Cash</h3>
            </div>
            <div class="panel-body">
                <p><strong>Cash</strong> See one of the staff members at the QUT Surfers stall to make your payment and confirm your membership.</p>
                <p><strong>NOTE:</strong> Available only during O-Week</p>
            </div>
            <div class="panel-footer">
                <h3>$10.00 AUD</h3>
              
                @Html.ActionLink("Confirm","Index", "Home", null, new { @class = "btn btn-sucess btn-md" })
                <br />
            </div>
        </div>   
    </div>
    <div class="col-md-4">
        <div class="panel panel-default text-center">
            <div class="panel-heading">
                <h3>PayPal or Credit Card</h3>
            </div>
            <div class="panel-body">
                <p><strong>PayPal</strong> Pay securely with a credit card or PayPal.</p>
                <p>Click on the button to go to the PayPal portal to make your payment effective.</p><br/>
            </div>
            <div class="panel-footer">
                <h3>$10.00 AUD</h3>
                <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
                    <input type="hidden" name="cmd" value="_s-xclick">
                    <input type="hidden" name="hosted_button_id" value="XMVW3SVPD54XJ">
                    <input type="image" src="https://www.paypalobjects.com/en_AU/i/btn/btn_buynowCC_LG.gif" border="0" name="submit" alt="PayPal – The safer, easier way to pay online!">
                    <img alt="" border="0" src="https://www.paypalobjects.com/en_AU/i/scr/pixel.gif" width="1" height="1">
                </form>

            </div>
        </div>   

    </div>
    <div class="col-md-2"></div>
</div>

<footer>
    <a href="https://www.facebook.com/qutsurf/" class="fa fa-facebook" target="_blank"></a>
    <a href="https://www.instagram.com/qutsurfers/?hl=en" class="fa fa-instagram" target="_blank"></a>
    &copy; @DateTime.Now.Year - QUT SURFERS
</footer>