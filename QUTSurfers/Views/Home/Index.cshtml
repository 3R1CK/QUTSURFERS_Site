@{
    ViewBag.Title = "Home Page";
}

<style>
.panel-default > .panel-heading-custom {
    background: #1C2331; color: #fff;
}
.peopleCarouselImg img {
  width: auto;
  height: 400px;
  max-height: 400px;
  align-content: center;
}

.carousel-inner > .item > img {
    margin: 0 auto;
}



</style>


    <!-- Carousel -->
<div id="myCarousel" class="carousel slide" data-interval="5000" data-ride="carousel">
    <!-- Carousel indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <!-- Wrapper for carousel items -->
    <div class="carousel-inner">
        <div class="active item peopleCarouselImg">
            <img class="first-slide" src="~/Content/Images/bannerV1.1.JPG" alt="First Slide">
        </div>

        <div class="item peopleCarouselImg">
            <img class="second-slide" src="~/Content/Images/banner2V1.1.jpg" alt="Second Slide">
        </div>
        <div class="item peopleCarouselImg">
            <img class="third-slide" src="~/Content/Images/banner3V1.1.JPG" alt="Third Slide">
        </div>
        
        <div class="item peopleCarouselImg">
            <img class="fourth-slide" src="~/Content/Images/banner4.JPG" alt="Fourth Slide">
        </div>
    </div>
    <!-- Carousel controls -->
    <a class="carousel-control left" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="carousel-control right" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div><br><br>


<hr />
<h4 class="w3-justify"><strong>SEM 01-2019 EVENTS:</strong></h4>
<hr />

<!--Events Section-->
