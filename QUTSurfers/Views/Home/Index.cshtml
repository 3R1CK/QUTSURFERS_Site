            <div class="panel panel-default">
                <div class="panel-heading panel-heading-custom"><strong>BOOK NOW! Byron Bay Trips Sem01-2019</strong></div>
                <div class="panel-body"><img src="/Content/Images/jeremy-bishop-489932-unsplash.jpg" class="img-responsive" style="width:100%" alt="Image"></div>
                <div class="panel-footer">
                    @Html.ActionLink("More Info", "ByronTrip", "Events",null, new {@class= "btn btn-primary btn-md btn-block" })
                </div>
            </div>
        </div>
        <div class="col-sm-4"> 
            <div class="panel panel-default">
                <div class="panel-heading panel-heading-custom"><strong>Swimming Classes</strong></div>
                <div class="panel-body"><img src="/Content/Images/marcus-ng-570012-unsplash.jpg" class="img-responsive" style="width:100%" alt="Image"></div>
                <div class="panel-footer">
                    <button type="button" class="btn btn-primary btn-md btn-block">More Info</button>
                </div>
            </div>
        </div>
        <div class="col-sm-4"> 
            <div class="panel panel-default">
