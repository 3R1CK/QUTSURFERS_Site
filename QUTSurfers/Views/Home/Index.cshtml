@{
    ViewBag.Title = "Home Page";
}

<style>
.panel-default > .panel-heading-custom {
    background: #374660; color: #fff;
    text-align: center;
}
.panel-heading{
    padding: 10px 0px 25px 5px;
}
.peopleCarouselImg img {
  width: auto;
  height: 400px;
  max-height: 400px;
  align-content: center;
}

.carousel-inner > .item > img {
    margin: 0 auto;
}



</style>


    <!-- Carousel -->
<div id="myCarousel" class="carousel slide" data-interval="5000" data-ride="carousel">
    <!-- Carousel indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <!-- Wrapper for carousel items -->
    <div class="carousel-inner">
        <div class="active item peopleCarouselImg">
            <img class="first-slide" src="~/Content/Images/bannerV1.1.JPG" alt="First Slide">
        </div>

        <div class="item peopleCarouselImg">
            <img class="second-slide" src="~/Content/Images/banner4.JPG" alt="Second Slide">
        </div>
        <div class="item peopleCarouselImg">
            <img class="third-slide" src="~/Content/Images/banner3V1.1.JPG" alt="Third Slide">
        </div>
    </div>
    <!-- Carousel controls -->
    <a class="carousel-control left" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="carousel-control right" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
</div><br>


<hr />
<h4 class="w3-justify"><strong>Learn to Surf at Byron Bay Trips</strong></h4><em>(Semester 01 - 2019)</em>

<hr />

<!--Events Section-->
